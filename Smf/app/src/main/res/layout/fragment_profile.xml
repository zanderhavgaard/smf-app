<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:paddingBottom="40dp"
    android:background="@drawable/border_shadow"
    android:layout_margin="10dp"
    >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="195dp"
                android:gravity="top"
                android:id="@+id/profile_imageview_header"
                android:src="@drawable/header_bg" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="center_horizontal"
                android:padding="28dp"
                android:background="@drawable/round_layout"
                android:scaleType="fitXY"
                android:src="@drawable/user"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_usernamedesc"
                android:fontFamily="@font/nexab"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_usernamedata"
                android:fontFamily="@font/nexab"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_emaildesc"
                android:fontFamily="@font/nexal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_emaildata"
                android:fontFamily="@font/nexal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_countrydesc"
                android:fontFamily="@font/nexal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_countrydata"
                android:fontFamily="@font/nexal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_birthyeardesc"
                android:fontFamily="@font/nexal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_textview_birthyeardata"
                android:fontFamily="@font/nexal"
                />
        </LinearLayout>





    <!--log out button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_button_logout"
        android:layout_gravity="center"
        android:background="@drawable/signup_bg"
        android:textColor="#ffffff"
        android:fontFamily="@font/nexal"
        android:layout_marginTop="20dp"
        />

    </LinearLayout>
</ScrollView>